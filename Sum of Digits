public class Main {
    public static void main(String[] args) {
        int n =241;
        int sum =0;
        int cnt=0;
        while(n>0){
            int ld = n%10;
            sum = sum+ld;
            n = n/10;
            cnt++;
        }
        System.out.println("This is "+cnt+" digit number and The sum of digits is : "+sum);
    }
}
